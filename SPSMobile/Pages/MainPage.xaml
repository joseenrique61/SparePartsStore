<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            x:Class="SPSMobile.Pages.MainPage"
            xmlns:local="clr-namespace:SPSMobile.Pages"
            Title="MainPage">
    <ContentPage.Resources>
        <Color x:Key="bgColor">#010101</Color>
        <Color x:Key="fgColor">#F6FAF6</Color>
        <x:Double x:Key="fontSize">20</x:Double>

        <Style x:Key="baseButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="{StaticResource fontSize}" />
            <Setter Property="Background" Value="{StaticResource bgColor}" />
            <Setter Property="TextColor" Value="{StaticResource fgColor}" />
        </Style>
    </ContentPage.Resources>

    <VerticalStackLayout Padding="20">
        <Label HorizontalTextAlignment="Center">
            "Welcome to SpareParts Store"
        </Label>
        <Grid RowDefinitions="*,*,*,*" ColumnDefinitions="*,50,*">
            <Image
                Source=""/>
            <Label
                Text=""
                />
        </Grid>
    </VerticalStackLayout>
    
</ContentPage>
