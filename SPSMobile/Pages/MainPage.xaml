<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SPSMobile.Pages.MainPage"
             Title="MainPage">
    <ScrollView>
        <VerticalStackLayout Spacing="40">
            <Label 
                Text="Welcome to SpareParts Store"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />

            <CarouselView 
                ItemsSource="{Binding Images}" 
                Loop="False"
                HeightRequest="400">
                <CarouselView.ItemsLayout>
                    <LinearItemsLayout Orientation="Horizontal"
                                       ItemSpacing="20"/>
                </CarouselView.ItemsLayout>
                <CarouselView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding}" Aspect="AspectFill" />
                    </DataTemplate>
                </CarouselView.ItemTemplate>
            </CarouselView>

            <CollectionView ItemsSource="{Binding SpareParts}" Grid.Row="1" Grid.ColumnSpan="2">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Name}" Grid.Row="0" Grid.Column="0" />
                            <!--<Label Text="{Binding Description}" Grid.Row="0" Grid.Column="1" />
<Label Text="{Binding Price}" Grid.Row="0" Grid.Column="2" />-->

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            <Grid RowDefinitions="200,200" ColumnDefinitions="200,200" >
                
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>