@model PurchaseOrder

@{
    ViewData["Title"] = "Buy Product";
}

<div class="content">
    <h1>Confirm Purchase</h1>

    <div>
        <h4>/// VIEWBAG</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name:
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Name
            </dd>
            <dt class="col-sm-2">
                Category:
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Category
            </dd>
            <dt class="col-sm-2">
                Description:
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Description
            </dd>
            <dt class="col-sm-2">
            </dt>
            <dd class="col-sm-10">
                @ViewBag.Price
            </dd>
        </dl>
    </div>

    <div class="row">
        <div class="col-md-4">
            <form asp-action="Buy">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Amount" class="control-label"></label>
                    <input asp-for="Amount" class="form-control" />
                    <span asp-validation-for="Amount" class="text-danger"></span>
                </div>
                <div class="form-group justify-content-between" style="margin-top: 20px;" >
                    <input type="submit" value="Confirm" class="btn btn-primary" />
                    <input type="submit" value="Cancel" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>


    <div>
        <hr />
        <dl class="row">
            <dt class="col-sm">
                <a href="~/PurchaseOrder/CartInfo" class="btn btn-primary">Confirmar</a>
            </dt>
            <dt class="col-sm">
                <a href="~/SparePart/Details/@Model?.Id" class="btn btn-danger">Cancelar</a>
            </dt>
        </dl>
    </div>
</div>


