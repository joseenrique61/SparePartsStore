@model IEnumerable<SPSModels.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<div class="content">
	<div class="row mt-4 mb-3">
		<h2 class="col-auto me-5">@ViewData["Title"]</h2>
		<a class="btn btn-success align-self-center col-auto" asp-action="Create"><i class="bi bi-plus-square"></i> Create new category</a>
	</div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
						<a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.Id">
							<i class="bi-pencil-square"></i>
							Edit
						</a>
						<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#modal1" data-bs-id="@item.Id">
							<i class="bi-trash"></i>
							Delete
						</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


<div class="modal fade" id="modal1" tabindex="-1" aria-labelledby="modal1Label" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<h1 class="modal-title fs-5" id="modal1Label">Are you sure you want to delete this category?</h1>
				<button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
			</div>
			<div class="modal-body">
				<p>This will delete any spare part with this category. This action is not reversible.</p>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>

				<form id="deleteForm" asp-action="Delete" method="post">
					<button type="submit" class="btn btn-danger">Delete</button>
				</form>
			</div>
		</div>
	</div>
</div>
