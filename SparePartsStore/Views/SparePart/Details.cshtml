@model SparePart

@{
    ViewData["Title"] = Model.Name;
}

<div class="content">
	<div class="row row-cols-2">
        <div class="col-4 align-self-start">
			<img src="@Model.Image" class="img"/>
        </div>
        <div class="row col ms-3 align-self-start">
			<h2>@Model.Name</h2>
			<hr />
            <h5>Description</h5>
		    <p class="text-wrap">@Model.Description</p>

            <hr/>

            <p><strong>Category: </strong>@Model.Category!.Name</p>
            <p><strong>Price: </strong>$@Model.Price</p>
            <p><strong>Stock: </strong>@Model.Stock</p>

            <hr/>

            <form asp-action="AddToCart" id="addForm">
                <input hidden asp-for="Id" />
				<div class="row">
					<p class="col-auto my-auto">Add to cart: </p>
					<button class="btn btn-secondary col-auto">-</button>
					<p class="col-auto my-auto" id="amount">1</p>
					<button class="btn btn-success col-auto">+</button>
                    <button type="submit" class="btn btn-primary" id="addButton" onclick="AddToCart()">Add</button>
				</div>
            </form>
        </div>
    </div>
</div>